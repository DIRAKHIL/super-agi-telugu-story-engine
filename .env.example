# Telugu Story Engine Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=12000
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://telugu_user:telugu_pass@localhost:5432/telugu_story_engine
REDIS_URL=redis://localhost:6379/0

# Model Configuration
MODEL_TELUGU_BERT=ai4bharat/indic-bert
MODEL_TELUGU_GPT=microsoft/DialoGPT-medium
MODEL_EMOTION=j-hartmann/emotion-english-distilroberta-base
MODEL_CULTURAL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
MODEL_CACHE_DIR=data/cache
MODEL_DATA_DIR=data/models

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=12001
DASHBOARD_TITLE=Telugu Story Engine Dashboard

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/telugu_story_engine.log

# Security Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","https://work-1-ojauwtnwevcsummg.prod-runtime.all-hands.dev","https://work-2-ojauwtnwevcsummg.prod-runtime.all-hands.dev"]
TRUSTED_HOSTS=["*"]

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Story Generation Configuration
MAX_STORY_LENGTH=10000
MIN_STORY_LENGTH=500
DEFAULT_STORY_LENGTH=2000
QUALITY_THRESHOLD=0.8
CULTURAL_AUTHENTICITY_THRESHOLD=0.75
EMOTIONAL_COHERENCE_THRESHOLD=0.8

# Agent Configuration
MAX_COLLABORATION_ROUNDS=5
CONSENSUS_THRESHOLD=0.7
CONFLICT_RESOLUTION_STRATEGY=weighted_voting

# Cultural Settings
DEFAULT_CULTURAL_CONTEXT=contemporary_telugu
SUPPORTED_DIALECTS=["coastal_andhra","rayalaseema","telangana","standard_telugu"]

# GPU Configuration (if available)
CUDA_VISIBLE_DEVICES=0
USE_MIXED_PRECISION=true
GRADIENT_CHECKPOINTING=true

# External Services (Optional)
OPENAI_API_KEY=your-openai-api-key-if-needed
HUGGINGFACE_TOKEN=your-huggingface-token-if-needed

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@telugustoryengine.com

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-url.com/telugu-story-engine
WEBHOOK_SECRET=your-webhook-secret